{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "ES2020",
        "watch": true,
        "module": "NodeNext",
        "moduleResolution": "node",
        "types": ["node"],
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts",
      ],
    "include": [
        "src/*"
      ]
      
}